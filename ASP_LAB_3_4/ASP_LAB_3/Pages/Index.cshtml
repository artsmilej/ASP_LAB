@page
@model ASP_LAB_3.Pages.IndexModel
@using System.Data;
@{
    ViewData["Title"] = "Головна сторінка";
}

<div class="text-center">
    <h1 class="display-4">Лабораторна робота 3 та 4</h1>
</div>

<h2>Книги</h2>
<table class="table">
    <thead>
        <tr>
            <th>Назва книги</th>
            <th>Ім'я автора</th>
            <th>Назва жанру</th>
            <th>Ціна</th>
            <th>Дата написання</th>
        </tr>
    </thead>
    <tbody>
        @if (Model.Books != null && Model.Books.Rows.Count > 0)
        {
            foreach (DataRow row in Model.Books.Rows)
            {
                <tr>
                    <td>@row["Назва_книги"]</td>
                    <td>@row["Ім_я_автора"]</td>
                    <td>@row["Назва_жанру"]</td>
                    <td>@row["Ціна"]</td>
                    <td>@row["Дата_написання"]</td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="5">Немає доступних книг.</td>
            </tr>
        }
    </tbody>
</table>

<h2>Автори</h2>
<table class="table">
    <thead>
        <tr>
            <th>Ім'я автора</th>
            <th>Дата народження</th>
            <th>Дата смерті</th>
        </tr>
    </thead>
    <tbody>
        @if (Model.Authors != null && Model.Authors.Rows.Count > 0)
