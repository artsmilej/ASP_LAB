            foreach (DataRow row in Model.Authors.Rows)
            {
                <tr>
                    <td>@row["Ім_я_автора"]</td>
                    <td>@row["Дата_народження"]</td>
                    <td>@row["Дата_смерті"]</td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="3">Немає доступних авторів.</td>
            </tr>
        }
    </tbody>
</table>

