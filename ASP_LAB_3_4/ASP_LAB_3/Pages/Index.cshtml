            {
                <tr>
                    <td>@row["Ім_я_клієнта"]</td>
                    <td>@row["Електронна_пошта"]</td>
                    <td>@row["Телефон"]</td>
                    <td>@row["Адреса"]</td>
                </tr>
            }
        }
        else
